@model SignUpViewModel


<div class="row offset-3 mt-5">
    <div class="col-6" style="width:60%">
        <div class="card">
            <div class="card-header fw-bold fs-4 text-center">
                Sign Up
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Auth" asp-action="SignUp">
                    <div class="form-floating mb-2">
                        <input asp-for="FirstName" type="text" class="form-control" id="floatingInput" placeholder="FirstName">
                        <label for="floatingInput">FirstName</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="LastName" type="text" class="form-control" id="floatingInput" placeholder="LastName">
                        <label for="floatingInput">LastName</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="PhoneNumber" type="text" class="form-control" id="floatingInput" placeholder="Phone">
                        <label for="floatingInput">Phone</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">Email address</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="PasswordConfirm" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Password Confirm</label>
                        <span asp-validation-for="PasswordConfirm" class="text-danger fw-bolder"></span>
                    </div>
                    <button class="btn btn-primary w-100 py-2" type="submit">Sign Up</button>
                    <a class="btn btn-success w-100 py-2 mt-2" asp-action="SignIn" asp-controller="Auth">Sign In</a>
                    <p class="mt-5 mb-3 text-body-secondary">B.K</p>
                </form>
            </div>
        </div>
    </div>
</div>