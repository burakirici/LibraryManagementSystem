@model List<AuthorListViewModel>

@if (@User.Claims.FirstOrDefault(x => x.Type == "id")?.Value != null)
{

    <h2>Author List</h2>


    <a asp-action="Add" asp-controller="Author" class="btn btn-success mt-2 mb-2">Add New</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Author Name</th>
                <th>Author SurName</th>
                <th>Birth Day</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var yazar in Model)
            {
                <tr>
                    <td>@yazar.Id</td>
                    <td>@yazar.FirstName</td>
                    <td>@yazar.LastName</td>
                    <td>@yazar.DateOfBirth.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@yazar.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@yazar.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
@{
    else
    {
        <div class="alert alert-danger text-center">
            <h5 class="fw-bold">You must be logged in to see the Books section.</h5>
            <a class="btn btn-danger fw-bold" asp-controller="Auth" asp-action="SignIn">Sign In</a>
        </div>
    }
}

